generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  SECRETARIA
  TOTEM
}

enum Action {
  CREATE
  UPDATE
  DELETE
}

enum AppoimentsStatus {
  SCHEDULED
  CONFIRMED
  WAITING_APPOIMENT
  IN_APPOINTMENT
  FINISIHED
  CANCELED
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  photo    String?
  role     Role    @default(SECRETARIA)
  active   Boolean @default(true)

  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  tutorials  UserTutorials[]
  Appoiments Appoiments[]
}

model UserTutorials {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  tutorialKey String
  completedAt DateTime

  @@unique([userId, tutorialKey])
}

model AuditLog {
  id       String  @id @default(uuid())
  action   Action
  entity   String
  entityId String
  userId   String?
  before   Json?
  after    Json?

  createAt DateTime @default(now())
}

model ExamsType {
  id                     String  @id @default(uuid())
  name                   String
  description            String?
  defautlDuration        String
  preparationInstruction String
  active                 Boolean

  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  Appoiments Appoiments[]
}

model Appoiments {
  id                 String           @id @default(uuid())
  patient_cpf        String
  patient_name       String
  patient_phone      String
  patient_email      String
  patient_birth_date String
  user               User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId             String
  examsType          ExamsType        @relation(fields: [examsTypeId], references: [id], onDelete: Cascade)
  examsTypeId        String
  date               DateTime
  status             AppoimentsStatus @default(SCHEDULED)
  details            String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
